{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "static",
    "lib": ["dom", "es2020", "dom.iterable"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": false,
    "typeRoots": ["./src/vendor"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
